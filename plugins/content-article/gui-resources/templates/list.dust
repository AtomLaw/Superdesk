<div class="modal hide fade" id="modal-create-article">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">x</a>
        <h3>_('Add Article');</h3>
    </div>
    <div class="modal-body">
        <form class="form-horizontal row-fluid">
            <fieldset>
                <div class="control-group">
                    <label class="control-label">_('Title');:</label>
                    <input type="text" class="input input-xlarge" name="title" ng-model="newArticleTitle" />
                </div>
            </fieldset>
        </form>
    </div>
    <div class="modal-footer">
        <a href="" class="btn" data-dismiss="modal">_("Cancel");</a>
        <a href="" class="btn save btn-primary" data-dismiss="modal" data-action="save" ng-click="createArticle()">_("Save changes");</a>
    </div>
</div>

<div class="modal hide fade" id="modal-delete-article">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">x</a>
        <h3>_('Delete Article');</h3>
    </div>
    <div class="modal-body">
        <p>_('Are you sure you want to delete this article?');</p>
    </div>
    <div class="modal-footer">
        <a href="" class="btn" data-dismiss="modal">_("Cancel");</a>
        <a href="" class="btn save btn-primary" data-dismiss="modal" data-action="save" ng-click="deleteArticle(articleIdToDelete)">_("Delete");</a>
    </div>
</div>

<div class="subnav subnav-fixed">
    <input type="text" name="searchbar" class="searchbar-container" style="width:500px;" ng-model="searchTerm">
    <a class="btn btn-medium btn-info pull-right" href="" data-toggle="modal" data-target="#modal-create-article"><span class="medium-icon-add"></span> _('Add New Article');</a>
</div>

<div class="subnav subnav-level2 subnav-fixed">
    <div class="btn-toolbar">
        <div class="btn-group">
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">_('Multiple actions');<span class="caret"></span></a>
            <ul class="dropdown-menu sf-dropdown">
                <li><a href="" ng-click="deleteArticles()"><i class="icon-trash"></i> _('Delete');</a></li>
                <li><a href="" ng-click="publishArticles()"><i class="icon-check"></i> _('Publish');</a></li>
                <li><a href="" ng-click="unpublishArticles()"><i class="icon-ban-circle"></i> _('Unpublish');</a></li>
            </ul>
        </div>

        <div class="btn-group pull-right" style="margin-left:20px;">
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-settings"></i> <span class="caret"></span></a>
            <ul class="dropdown-menu sf-dropdown sf-dropdown-right">
                <li><a href=""><i class="icon-eye-open"></i> _('View/Hide details');</a></li>
                <li class="divider"></li>
                <li><a href="" ng-click="settings.itemsPerPage = 25"><i class="icon-th-large"></i> _('25 items per page');</a></li>
                <li><a href="" ng-click="settings.itemsPerPage = 50"><i class="icon-th-large"></i> _('50 items per page');</a></li>
                <li class="divider"></li>
                <li><a id="grid_view" href=""><i class="icon-th"></i> _('Grid view');</a></li>
                <li><a id="list_view" href=""><i class="icon-th-list"></i> _('List view');</a></li>
            </ul>
        </div>

        <div class="btn-group pull-right" style="margin-left:20px;">
            <button class="btn" ng-click="page = page - 1" ng-disabled="page == 1"><i class="icon-chevron-left"></i></button>
            <button class="btn" ng-click="page = page + 1" ng-disabled="page == pageMax"><i class="icon-chevron-right"></i></button>
        </div>

        <div class="page-info pull-right">
            Page <input type="text" value="1" ng-model="page" /> of {{ pageMax }}
        </div>

    </div>
</div>

<div class="main-content-container">
    <table class="sf_table">
        <thead>
            <tr>
                <th class="chckbx_col"><sfcheck check="allChecked" clickevent="toggleAll()"/></th>
                <th class="title_col" ng-show="settings.fields.title">_('Title');</th>
                <th ng-show="settings.fields.author">_('Author');</th>
                <th ng-show="settings.fields.publishDate">_('Publish date');</th>
                <th ng-show="settings.fields.status">_('Status');</th>
                <th class="action_col" ng-show="settings.fields.action">
                    <div class="dropdown" style="text-align:right;">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-switches"></i> <span class="caret"></span></a>
                        <ul class="dropdown-menu sf-dropdown-simple pull-right" id="columns-switches">
                            <li><sfcheck check="settings.fields.title" clickevent="saveSettings()"/> _('Title');</li>
                            <li><sfcheck check="settings.fields.author" clickevent="saveSettings()"/> _('Author');</li>
                            <li><sfcheck check="settings.fields.publishDate" clickevent="saveSettings()"/> _('Publish Date');</li>
                            <li><sfcheck check="settings.fields.status" clickevent="saveSettings()"/> _('Published');</li>
                            <!--
                            <li> <sfcheck check="settings.fields.readCount" clickevent="saveSettings()"/> _('Read count');</li>
                            <li> <sfcheck check="settings.fields.importance" clickevent="saveSettings()"/> _('Importance');</li>
                            <li> <sfcheck check="settings.fields.collaborators" clickevent="saveSettings()"/> _('Collaborators');</li>
                            -->
                            <li> <sfcheck check="settings.fields.action" clickevent="saveSettings()"/> _('Action');</li>
                        </ul>
                    </div>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="article in articles" ng-class="{'active-bg' : article.checked}">
                <td class="chckbx_col"><sfcheck check="article.checked" clickevent="toggle($index)"/></td>
                <td class="title_col" ng-show="settings.fields.title"><a href="#/article/{{ article.Id }}">{{ article.Content.Title }}</a></td>
                <td ng-show="settings.fields.author">{{ article.Author.FullName }}</td>
                <td ng-show="settings.fields.publishDate">{{ article.PublishedOn }}</td>
                <td ng-show="settings.fields.status"><sftoggle check="article.IsPublished" clickevent="publishUnpublish($index)"  onoff="true"/></td>
                <td class="action_col" ng-show="settings.fields.action">
                    <div class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Action <b class="caret"></b></a>
                        <ul class="dropdown-menu sf-dropdown-simple pull-right">
                            <li><a href="#/article/{{ article.Id }}"><i class="icon-pencil"></i> _('Edit');</a></li>
                            <li><a href="#modal-delete-article" data-toggle="modal" ng-click="$parent.articleIdToDelete = article.Id"><i class="icon-trash"></i> _('Delete');</a></li>
                            <li ng-hide="article.IsPublished"><a href="" ng-click="publishArticle(article.Id)"><i class="icon-check"></i> _('Publish');</a></li>
                            <li ng-show="article.IsPublished"><a href="" ng-click="unpublishArticle(article.Id)"><i class="icon-ban-circle"></i> _('Unpublish');</a></li>
                            <li><a href=""><i class="icon-eye-open"></i> _('Preview');</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>
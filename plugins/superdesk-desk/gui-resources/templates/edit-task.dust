<div class="modal fade split-popup" id="AddAssignment">
  <div class="modal-header">
    <a href="#" class="close" data-action="close" aria-hidden="true">&times;</a>
    <input type="text" placeholder="_('Assignment title');" class="assignment-title" data-task-info="title" value="{Title}" />
  </div>
  <div class="modal-body">
    <div class="modal-left-pane">
        <div class="taskmodal-header">
        	<div class="parent-task-info">
        		_('Parent task:');
       			<a href="javascript:void(0)" data-toggle="dropdown">
       				<span data-task-info="parent">{?Parent}{Parent.Title}{:else}_('None');{/Parent}</span>
       			</a>
        		<ul class="dropdown-menu sf-dropdown sf-dropdown-right" data-list="parent-task">
        		
        		</ul>
        	</div>
        	<ul class="assign-labels clearfix">
				<li class="critical">
					<i class="icon-desk-time icon-white"></i> <span data-task-info="due-date">{DueDate}</span>
				</li>
				<li>
					<i class="icon-desk-subtask icon-white"></i> <span data-task-info="subtask-count">{SubtaskCount}</span> _('Subtasks');
				</li>
			</ul>
        </div>
        <div class="taskmodal-content">
        	<div class="taskmodal-description" data-task-info="description" contenteditable="true">
        		{Description}
        	</div>    
        	<section class="modal-mainpane-module">
        		<header>_('Subtasks');</header>
        		<ul class="subtask-list-view clearfix" data-list="subtasks">
        			{#Subtasks}
        			<li>
        				<h6>{Title}</h6>
        				<p>
        					{Description}
        				</p>
        				<span class="assign-label critical"><i class="icon-desk-time icon-white"></i> {DueDate}</span>
        				<a href="javascript:void(0)">_('Open details')</a>
        			</li>
        			{/Subtasks}
        		</ul>
        	</section>    
        	<section class="modal-mainpane-module">
        		<header>Comments</header>
        		<div class="add-comment-box">
        			<textarea placeholder="Write a comment" data-task-info="comment"></textarea>
                    <button type="button" class="btn btn-primary btn-mini" data-action="save-comment">_('Save Comment');</button>
        		</div>
        		<ul class="comment-list">
        			
        		</ul>
        	</section>
        </div>
    </div>
    <div class="modal-right-pane">
    	<section class="modal-sidepane-module clearfix">
    		<header>_('Assignee');</header>
    		<div class="module-sidepane-module-content">
    			<div class="assignee-info {^Assignee}hide{/Assignee}" data-task-info="assignee">
   					<figure data-task-info="assignee-image">
    					
   					</figure>
   					<b data-task-info="assignee-name">{Name}</b>
   					<time>{Date}</time>
    			</div>
    			<div class="btn-group">
				  <a class="btn dropdown-toggle" data-toggle="dropdown" href="javascript:void(0)">
				    <i class="icon-plus-sign"></i> _('Assign');
				    <span class="caret"></span>
				  </a>
				  <ul class="dropdown-menu sf-dropdown sf-dropdown-right" data-list="users">
				  	{#Users}
						<li value="{Id}">{Name}</li>
					{/Users}
				  </ul>
				</div>
    		</div>
    	</section>
    	<section class="modal-sidepane-module clearfix">
    		<header>_('Status');</header>
    		<div class="module-sidepane-module-content">
    			<div class="task-status {Status.Key|strps}-status" data-task-info="status">{Status.Key}</div>
    		</div>
    	</section>
    	<section class="modal-sidepane-module clearfix">
    		<header>_('Action');</header>
    		<div class="module-sidepane-module-content">
    			<input data-task-info="due-date" class="hide" />
    			<a class="btn" href="javascript:void(0)" data-ctrl="due-date-proxy"><i class="icon-desk-time"></i> _('Due Date');</a>
    			<a class="btn" href="javascript:void(0)" data-ctrl="add-subtask"><i class="icon-desk-subtask"></i>_('Add Subtask');</a>
    			<a class="btn" href="javascript:void(0)"><i class="icon-arrow-right"></i> _('Start Progress');</a>
    			<a class="btn" href="javascript:void(0)"><i class="icon-ok"></i> _('Finish Task');</a>
    			<a class="btn" href="javascript:void(0)" style="margin-top:30px;"><i class="icon-trash"></i> _('Delete Task');</a>
    		</div>
    	</section>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn" data-action="close">_('Cancel');</button>
    <button type="button" class="btn btn-primary" data-action="save">_('Save Changes');</button>
  </div>
</div>

{>"media-archive>types/_default/view"/}
{+meta}
<div class="span6">
<form class="form-horizontal row-fluid">

	<dl data-select="language">
		<dt>_('Language')</dt>
    	<dd>
        	{Languages|s}
		</dd>
	</dl>
	
    {#Meta}
	<fieldset>
    	<dl>
			<dt>_('Title')</dt>
            <dd>
            	<input name="Title" class="span3" value="{Title}" />
			</dd>
			<dt>_('Description')</dt>
            <dd>
            	<input name="Description" class="span3" value="{Description}" />
			</dd>
        </dl>
    </fieldset>
    {/Meta}
    
    <fieldset data-fieldset="add">
    	<dl>
			<dt>_('Title')</dt>
            <dd>
            	<input name="Title" class="span3" />
			</dd>
			<dt>_('Description')</dt>
            <dd>
            	<input name="Description" class="span3" />
			</dd>
        </dl>
	</fieldset>
</form>
</div>
{/meta}
{<footer}
	<button class="btn">_('save')</button>
{/footer}
